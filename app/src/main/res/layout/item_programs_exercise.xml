<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_my_programs"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="40dp"
    android:background="@drawable/bg_myprogram_item">


    <TextView
        android:id="@+id/exercise_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:text="Exercise name"
        android:textSize="18dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toTopOf="@+id/exercise_description"
        tools:layout_editor_absoluteY="2dp" />

    <TextView
        android:id="@+id/exercise_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="8dp"
        android:text="DESCRIPTION OF THE EXERCISE"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/exercise_name"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="2dp"
        app:layout_constraintBottom_toTopOf="@+id/exercise_button"/>


    <Button
        android:id="@+id/exercise_button"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Info"
        app:layout_constraintBottom_toBottomOf="@id/exercise_description"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp" />


</androidx.constraintlayout.widget.ConstraintLayout>